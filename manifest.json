{
  "manifest_version": 3,
  "name": "Unsplash AI 태그/설명 자동생성",
  "version": "1.2",
  "description": "unsplash 업로드시 OpenAI, Gemini, Claude AI로 태그/설명 자동 생성 및 입력",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://unsplash.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.anthropic.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://unsplash.com/*"],
      "js": ["content.js"]
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [{
    "resources": ["ai-models-config.json"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
